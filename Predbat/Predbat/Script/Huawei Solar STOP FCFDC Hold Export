alias: Huawei Charging Power 5000W
icon: mdi:battery-charging-100
mode: single
sequence:
  - condition: template
    value_template: "{{ states(\"number.battery_maximum_charging_power\") | int(0) != 5000 }}"
  - action: number.set_value
    target:
      entity_id: number.battery_maximum_charging_power
    data:
      value: 5000
description: Set the maximum charging power of the battery to 5000W if needed.
