alias: Huawei Charging power 2500W
icon: mdi:battery-charging-100
mode: single
sequence:
  - condition: template
    value_template: "{{ states(\"number.battery_maximum_charging_power\") | int(0) != 2500 }}"
  - action: number.set_value
    target:
      entity_id: number.battery_maximum_charging_power
    data:
      value: 2500
description: >-
  Set the maximum charging power of the battery to 2500W if it is not already
  set.
